class Solution {
    public int countWords(String[] words1, String[] words2) {
        /*
        word needs to occur in both arrays, & atmost 1 once in each
        map<word1,count>
        if word1 not in word2 remove || if count >2
        once found in word2, keep new count & ensure below 0
        second map
        */
        int singleOcurranceCommonWords=0;
        HashMap<String, Integer> map1 = new HashMap<>();
        HashMap<String, Integer> map2 = new HashMap<>();
        for(String word: words1){
            map1.put(word, map1.getOrDefault(word,0)+1);
        }
        for(String word: words2){
            map2.put(word, map2.getOrDefault(word,0)+1);
        }
        
        for(String word: map2.keySet()){
            if(map1.getOrDefault(word,0)>=2){
                map1.remove(word);
            }else if(map1.getOrDefault(word,0)==1){
                map1.put(word,map1.get(word)+1);
            }            
        }
        for(String word: words1){
            if(map2.getOrDefault(word,0)!=1){
                map1.remove(word);
            }
        }
        return map1.size();
    }
}
